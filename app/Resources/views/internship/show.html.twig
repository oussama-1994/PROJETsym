{% extends 'base.html.twig' %}

{% block body %}
    <h1>Project</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ internship.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ internship.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if internship.date %}{{ internship.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ internship.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ internship.description }}</td>
            </tr>
            <tr>
                <th>Entreprise_name</th>
                <td>{{ internship.entreprisename }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('internship_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('internship_edit', { 'id': internship.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
